<?xml version="1.0" encoding="utf-8"?>
<Rules>
    <Rule id="rating">
        <Question>Do you want to watch a high rated movie?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    ...
    <Rule id="genre">
        <Question>Want to see family friendly?</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue value="comedy, adventure, family, fantasy, scifi"/>
            </Selection>
            <Selection value="false">
                <MultipleValue value="horror, thriller, crime, drama"/>
            </Selection>
        </Answer>
    </Rule>
    ...
    <Rule id="playtime">
        <Question>Have you got 2 hours for a movie?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    ...
    <Rule id="animation">
        <Question>Would you like a live-action movie?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    ...
    <Rule id="multiple language">
        <Question>Do you want to see the movie in a foreign language?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
</Rules>
